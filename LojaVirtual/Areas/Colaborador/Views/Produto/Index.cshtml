@model X.PagedList.IPagedList<LojaVirtual.Models.Produto>

@{
    ViewData["Title"] = "Index";
    var pesquisa = Context.Request.Query["pesquisa"];
}
    <h1>Produto</h1>

    <br />
    <br />
    <form method="get">
        <div class="form-group">
            <label for="pesquisa"></label>
            <input type="text" name="pesquisa" id="pesquisa" value="@pesquisa" class="form-control" placeholder="Digitte o nome do produto" />
        </div>
        <button type="submit" class="btn btn-primary">pesquisar</button>
    </form>
    <br />
    <br />

    @if (Html.ViewContext.TempData["MSGS"] != null)
    {
        <p class="alert alert-success">@Html.ViewContext.TempData["MSGS"]</p>
    }

<a asp-action="Cadastrar" class="btn btn-primary">Cadastrar</a>

    @if (Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(Model => Model.First().id)</th>
                        <th scope="col">@Html.DisplayNameFor(Model => Model.First().Nome)</th>
                        <th scope="col">@Html.DisplayNameFor(Model => Model.First().Categoria)</th>
                        <th scope="col">@Html.DisplayNameFor(Model => Model.First().Valor)</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (LojaVirtual.Models.Produto produto in Model)
                    {
                    <tr>
                        <th scope="row">@produto.id</th>
                        <td>@produto.Nome</td>
                        <td>@produto.CategoriaId</td>
                        <td>@produto.Valor</td>
                        <td>
                            <a asp-action="Atualizar" asp-route-id="@produto.id" class="btn btn-secondary">Atualizar</a>
                            <a asp-action="Excluir" asp-route-id="@produto.id" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

        @Html.PagedListPager((IPagedList)Model, pagina => Url.Action("Index", new { pagina }))
    }
    else
    {
        <br />
        <br /><span>Sem colaboradores cadastrados</span>
    }